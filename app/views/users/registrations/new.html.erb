<h1>- 新規登録 -</h1>
<div class="signup">
	<div class="form">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <p><%= f.label :name, "氏名" %></p>
      <p><%= f.text_field :name, autofocus: true, placeholder: "氏名" %></p>
			<p><%= f.label :email, "メールアドレス" %></p>
			<p><%= f.email_field :email, placeholder: "メールアドレス" %></p>
			<p><%= f.label :password, "パスワード" %></p>
			<p><%= f.password_field :password, placeholder: "パスワード" %></p>
			<p><%= f.label :password_confirmation, "パスワード確認" %></p>
			<p><%= f.password_field :password_confirmation, placeholder: "パスワード" %></p>
			<div class="signup-submit">
				<%= f.submit "登録", class: "btn-square-so-pop btn-gray" %>
			</div>
		<% end %>
	</div>
</div>
