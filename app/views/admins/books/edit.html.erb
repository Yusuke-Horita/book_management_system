<h1>- 書籍編集 -</h1>
<% if @book.errors.any? %>
	<div class="errors-section">
		<ul>
			<% @book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>
<div class="edit-book">
	<div class="form">
		<%= form_with model: [:admins, @book], local: true do |f| %>
			<p><%= f.label :title, "Title" %></p>
			<p><%= f.text_field :title, placeholder: "書籍タイトル" %></p>
			<p><%= f.label :stock, "Stock" %></p>
			<p><%= f.text_field :stock, placeholder: "在庫数" %></p>
			<div class="edit-book-submit">
				<%= f.submit "確定", class: "btn-square-so-pop btn-gray" %>
			</div>
		<% end %>
	</div>
</div>
